<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Version row (non-selectable) - at top after icon -->
    <Preference
        android:key="app_version"
        android:title="@string/settings_version_title"
        android:summary="@string/settings_version_summary"
        android:selectable="false" />

    <!-- Keep flashlight on when closed switch -->
    <SwitchPreferenceCompat
        android:key="keep_light_on_close"
        android:title="@string/settings_keep_light_title"
        android:summary="@string/settings_keep_light_summary"
        android:defaultValue="true" />

    <!-- Companion App Picker -->
    <Preference
        android:key="companion_app_display"
        android:title="@string/settings_companion_title"
        android:summary="@string/settings_companion_summary"
        android:selectable="false"
        android:widgetLayout="@layout/preference_companion_picker" />

    <!-- Test Companion App (Launch button) -->
    <Preference
        android:key="companion_app_launch"
        android:title="@string/settings_companion_launch_title"
        android:summary="@string/settings_companion_launch_summary"
        android:selectable="false"
        android:widgetLayout="@layout/preference_companion_launch" />

</PreferenceScreen>
