<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Version row (non-selectable) - at top after icon -->
    <Preference
        android:key="app_version"
        android:title="@string/settings_version_title"
        android:summary="@string/settings_version_summary"
        android:selectable="false" />

    <!-- Keep flashlight on when closed switch -->
    <SwitchPreferenceCompat
        android:key="keep_light_on_close"
        android:title="@string/settings_keep_light_title"
        android:summary="@string/settings_keep_light_summary"
        android:defaultValue="true"
        android:widgetLayout="@layout/preference_switch_pure_m3" />

    <!-- Dummy row for future settings -->
    <Preference
        android:key="dummy_future"
        android:title="Future Setting"
        android:summary="Placeholder for next feature"
        android:selectable="false" />

</PreferenceScreen>
