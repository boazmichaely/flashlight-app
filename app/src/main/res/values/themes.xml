<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Flashlight" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- System bars for flashlight app branding -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:navigationBarColor">@color/black</item>
        
        <!-- Main app background (dark for flashlight) -->
        <item name="android:colorBackground">@color/black</item>
        
        <!-- Side sheet/dialogs back to white -->
        <item name="colorSurface">@color/white</item>
        <item name="colorOnSurface">@color/black</item>
        
        <!-- Custom components for black background contrast -->
        <item name="sliderStyle">@style/Widget.Flashlight.Slider</item>
        <item name="switchStyle">@style/Widget.Flashlight.Switch</item>
    </style>
    
    <!-- Custom slider style for flashlight intuition -->
    <style name="Widget.Flashlight.Slider" parent="Widget.Material3.Slider">
        <item name="trackColorActive">@color/slider_track_active</item>
        <item name="trackColorInactive">@color/slider_track_inactive</item>
        <item name="thumbColor">@color/slider_thumb</item>
    </style>
    
    <!-- Custom switch style for black background contrast -->
    <style name="Widget.Flashlight.Switch" parent="Widget.Material3.CompoundButton.MaterialSwitch">
        <item name="thumbTint">@color/switch_thumb_color</item>
        <item name="trackTint">@color/switch_track_color</item>
    </style>
    

    

</resources>
